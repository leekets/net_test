<div class="modal fade" id="modals_autoTree" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">×</a>
                <h3>Auto Tree</h3>
            </div>
            <div class="modal-body">
                <div class="control-group">
                    @using (Html.BeginForm("CategoriesBatchInsert", "CategoriesSpry", FormMethod.Post, new { @class = "form-inline" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <input type="text" class="form-control" id="num" name="num" value="20">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control f_text_category" name="category" id="category" value="">
                        </div>
                        <input type="hidden" name="id" class="f_text_id" value="">
                        <input type="hidden" name="act" value="autoCate">
                        <button type="submit" class="btn">Submit</button>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-default" data-dismiss="modal">Close</a>
            </div>
        </div>
    </div>
</div>
<script>
    $('#modals_autoTree').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        var modalID = button.data('id')
        var modalCategory=button.data("category")
        var modal = $(this)
        modal.find('.f_text_category').val(modalCategory)
        modal.find('.f_text_id').val(modalID)
    })
</script>